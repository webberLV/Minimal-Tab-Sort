{
  "manifest_version": 3,
  "name": "Minimal Tab Sort",
  "version": "1.0.0",
  "author": "Webber",
  "description": "Sort tabs by website domain, preserving pinned tabs and tab groups.",
  "permissions": ["tabs", "tabGroups"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Sort tabs"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
